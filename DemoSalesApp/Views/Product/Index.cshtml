@model IEnumerable<Product>
@{
    ViewData["Title"] = "Products";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Products for sale</h2>
            <a asp-controller="Product" asp-action="SellProduct" class="btn btn-primary text-end">
                <i class="bi bi-file-earmark-plus">Sell new Product </i>
            </a>
        </div>
    </div>
</div>
<br>

<section>
    <div class="container py-5">
        <div class="row">
            @foreach (var obj in Model)
            {
            <div class="col-md-12 col-lg-4 mb-4 mb-lg-0 mt-4">
                <div class="card text-black">
                    @*<img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-product-cards/img1.webp" class="card-img-top" alt="iPhone" />*@
                    <img style="height: fit-content;" src="@obj.ProductPicUrl" class="card-img-top" alt="@obj.ProductName" />
                    <div class="card-body" style="background-color: steelblue">
                        <div class="text-center mt-1">
                            <h4 class="card-title"> @obj.ProductName </h4>
                            <h6 class="text-primary mb-1 pb-3"> @obj.ProductPrice Ft</h6>
                        </div>
                        <div class="text-center">
                            <div class="p-3 mx-n3 mb-4">
                                <h5 class="mb-0"> @obj.ProductDescription </h5>
                            </div>
                        </div>
                        <div class="d-flex flex-row">
                                <a asp-controller="Product" asp-action="ViewItem" asp-route-id="@obj.ProductId" class="btn btn-primary flex-fill me-1" data-mdb-ripple-color="dark">
                                    Details
                                </a>
                        </div>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</section>